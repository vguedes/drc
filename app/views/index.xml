<Alloy>
	<!-- <NavigationWindow id="navGroupWin" platform="ios"> -->
		<Window class="container" layout="vertical" title="dr.consulta">
			<View class="title">
				<ImageView class="menu_btn" image="/images/android/common/ic_menu_white_18dp.png"></ImageView>
				<Label class="label_title">dr.consulta</Label>
				<!-- <ImageView class="bell_btn" image="/images/android/common/flat_icon_bell_18dp.png" onClick="load_phone_auth"></ImageView> -->
				<!-- <ImageView class="find_btn" image="/images/android/common/ic_search_white_18dp.png" onClick="debug_phone_auth"></ImageView> -->
			</View>
			<Label class="apponitment_btn" onClick="load_consulta">MARQUE UMA CONSULTA OU EXAME</Label>
			<ScrollView id="content_view" class="content_view" layout="vertical">
				<View layout="horizontal" class="content_row">
					<View class="content_item" layout="vertical">
						<View class="content_icon_view" layout="vertical" onClick="open_gineco">
							<ImageView image="/gineco_icon.png" class="item_icon"></ImageView>
							<Label class="item_icon_label">Ginecologista</Label>
						</View>
						<Label class="content_label_view">
							ESPECIALIDADES
						</Label>
					</View>
					<View class="content_horz_separator" />
					<View class="content_item" layout="vertical">
						<View class="content_icon_view" layout="vertical" onClick="open_gravidez">
							<ImageView image="/gravidez_icon.png" class="item_icon"></ImageView>
							<Label class="item_icon_label">Gravidez e\nrecém nascido</Label>
						</View>
						<Label class="content_label_view" onClick="open_dicas">
							DICAS
						</Label>
					</View>
				</View>
				<View layout="horizontal" class="content_row">
					<View class="content_item" layout="vertical">
						<View class="content_icon_view" layout="vertical" onClick="open_pele_lesada">
							<ImageView image="/pele_sol_icon.png" class="item_icon"></ImageView>
							<Label class="item_icon_label">Pele lesada\npelo sol</Label>
						</View>
						<Label class="content_label_view" onClick="open_partes_corpo">
							PARTES DO CORPO
						</Label>
					</View>
					<View class="content_horz_separator" />
					<View class="content_item"  layout="vertical">
						<View class="content_icon_view" layout="vertical" onClick="open_exame_medico_geral">
							<ImageView image="/exame_geral_icon.png" class="item_icon"></ImageView>
							<!-- <ImageView image="/exame_geral_icon.png" onClick="load_exame" class="item_icon"></ImageView> -->
							<!-- <Label class="item_icon_label" onClick="load_exame">Exame\nmédico geral</Label> -->
							<Label class="item_icon_label">Exame\nmédico geral</Label>
						</View>
						<Label class="content_label_view" onClick="open_exames">
							EXAMES
						</Label>
					</View>
				</View>
			</ScrollView>
		</Window>
</Alloy>

